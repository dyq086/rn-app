@import '../common/index.wxss';:host {
  flex: 1;
}
.van-goods-action-button {
  border: none !important;
  height: 80px !important;
  height: var(--goods-action-button-height, 80px) !important;
  font-weight: 500 !important;
  font-weight: var(--font-weight-bold, 500) !important;
  line-height: 80px !important;
  line-height: var(--goods-action-button-height, 80px) !important;
}
.van-goods-action-button--first {
  display: block !important;
  margin-left: 10px;
  border-top-left-radius: 40px !important;
  border-top-left-radius: var(--goods-action-button-border-radius, 40px) !important;
  border-bottom-left-radius: 40px !important;
  border-bottom-left-radius: var(--goods-action-button-border-radius, 40px) !important;
}
.van-goods-action-button--last {
  display: block !important;
  margin-right: 10px;
  border-top-right-radius: 40px !important;
  border-top-right-radius: var(--goods-action-button-border-radius, 40px) !important;
  border-bottom-right-radius: 40px !important;
  border-bottom-right-radius: var(--goods-action-button-border-radius, 40px) !important;
}
.van-goods-action-button--warning {
  background: linear-gradient(to right, #ffd01e, #ff8917);
  background: var(--goods-action-button-warning-color, linear-gradient(to right, #ffd01e, #ff8917));
}
.van-goods-action-button--danger {
  background: linear-gradient(to right, #ff6034, #ee0a24);
  background: var(--goods-action-button-danger-color, linear-gradient(to right, #ff6034, #ee0a24));
}
@media (max-width: 321px) {
  .van-goods-action-button {
    font-size: 26px;
  }
}
