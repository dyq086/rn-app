@import '../common/index.wxss';.van-tree-select {
  position: relative;
  display: flex;
  user-select: none;
  font-size: 28px;
  font-size: var(--tree-select-font-size, 28px);
}
.van-tree-select__nav {
  flex: 1;
  background-color: #fafafa;
  background-color: var(--tree-select-nav-background-color, #fafafa);
  --sidebar-padding: 24px 16px 24px 24px;
}
.van-tree-select__nav__inner {
  width: 100% !important;
  height: 100%;
}
.van-tree-select__content {
  flex: 2;
  background-color: #fff;
  background-color: var(--tree-select-content-background-color, #fff);
}
.van-tree-select__item {
  position: relative;
  font-weight: bold;
  padding: 0 64px 0 32px;
  padding: 0 64px 0 var(--padding-md, 32px);
  line-height: 88px;
  line-height: var(--tree-select-item-height, 88px);
}
.van-tree-select__item--active {
  color: #ee0a24;
  color: var(--tree-select-item-active-color, #ee0a24);
}
.van-tree-select__item--disabled {
  color: #c8c9cc;
  color: var(--tree-select-item-disabled-color, #c8c9cc);
}
.van-tree-select__selected {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 32px;
  right: var(--padding-md, 32px);
}
