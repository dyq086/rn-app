@import '../common/index.wxss';.van-cell {
  position: relative;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  padding: 20px 32px;
  padding: var(--cell-vertical-padding, 20px) var(--cell-horizontal-padding, 32px);
  font-size: 28px;
  font-size: var(--cell-font-size, 28px);
  line-height: 48px;
  line-height: var(--cell-line-height, 48px);
  color: #323233;
  color: var(--cell-text-color, #323233);
  background-color: #fff;
  background-color: var(--cell-background-color, #fff);
}
.van-cell::after {
  position: absolute;
  box-sizing: border-box;
  transform-origin: center;
  /* cover wechat button:after default transforn-origin */
  content: ' ';
  pointer-events: none;
  top: auto;
  right: 0;
  bottom: 0;
  left: 32px;
  border-bottom: 2px solid #ebedf0;
  transform: scaleY(0.5);
}
.van-cell--borderless::after {
  display: none;
}
.van-cell-group {
  background-color: #fff;
  background-color: var(--cell-background-color, #fff);
}
.van-cell__label {
  margin-top: 6px;
  margin-top: var(--cell-label-margin-top, 6px);
  font-size: 24px;
  font-size: var(--cell-label-font-size, 24px);
  line-height: 36px;
  line-height: var(--cell-label-line-height, 36px);
  color: #969799;
  color: var(--cell-label-color, #969799);
}
.van-cell__value {
  overflow: hidden;
  text-align: right;
  vertical-align: middle;
  color: #969799;
  color: var(--cell-value-color, #969799);
}
.van-cell__title,
.van-cell__value {
  flex: 1;
}
.van-cell__title:empty,
.van-cell__value:empty {
  display: none;
}
.van-cell__left-icon-wrap,
.van-cell__right-icon-wrap {
  display: flex;
  align-items: center;
  height: 48px;
  height: var(--cell-line-height, 48px);
  font-size: 32px;
  font-size: var(--cell-icon-size, 32px);
}
.van-cell__left-icon-wrap {
  margin-right: 10px;
}
.van-cell__right-icon-wrap {
  margin-left: 10px;
  color: #969799;
  color: var(--cell-right-icon-color, #969799);
}
.van-cell__left-icon {
  vertical-align: middle;
  line-height: 48px;
  line-height: var(--cell-line-height, 48px);
}
.van-cell__right-icon {
  line-height: 48px;
  line-height: var(--cell-line-height, 48px);
}
.van-cell--clickable.van-cell--hover {
  background-color: #f2f3f5;
  background-color: var(--cell-active-color, #f2f3f5);
}
.van-cell--required {
  overflow: visible;
}
.van-cell--required::before {
  position: absolute;
  content: '*';
  left: 16px;
  left: var(--padding-xs, 16px);
  font-size: 28px;
  font-size: var(--cell-font-size, 28px);
  color: #ee0a24;
  color: var(--cell-required-color, #ee0a24);
}
.van-cell--center {
  align-items: center;
}
.van-cell--large {
  padding-top: 24px;
  padding-top: var(--cell-large-vertical-padding, 24px);
  padding-bottom: 24px;
  padding-bottom: var(--cell-large-vertical-padding, 24px);
}
.van-cell--large .van-cell__title {
  font-size: 32px;
  font-size: var(--cell-large-title-font-size, 32px);
}
.van-cell--large .van-cell__label {
  font-size: 28px;
  font-size: var(--cell-large-label-font-size, 28px);
}
