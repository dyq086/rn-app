@import '../common/index.wxss';.van-steps {
  overflow: hidden;
  background-color: #fff;
  background-color: var(--steps-background-color, #fff);
}
.van-steps--horizontal {
  padding: 20px;
}
.van-steps--horizontal .van-step__wrapper {
  position: relative;
  display: flex;
  overflow: hidden;
}
.van-steps--vertical {
  padding-left: 20px;
}
.van-steps--vertical .van-step__wrapper {
  padding: 0 0 0 40px;
}
.van-step {
  position: relative;
  flex: 1;
  font-size: 28px;
  font-size: var(--step-font-size, 28px);
  color: #969799;
  color: var(--step-text-color, #969799);
}
.van-step--finish {
  color: #323233;
  color: var(--step-finish-text-color, #323233);
}
.van-step__circle {
  border-radius: 50%;
  width: 10px;
  width: var(--step-circle-size, 10px);
  height: 10px;
  height: var(--step-circle-size, 10px);
  background-color: #969799;
  background-color: var(--step-circle-color, #969799);
}
.van-step--horizontal {
  padding-bottom: 28px;
}
.van-step--horizontal:first-child .van-step__title {
  transform: none;
}
.van-step--horizontal:first-child .van-step__circle-container {
  padding: 0 16px 0 0;
  transform: translate3d(0, 50%, 0);
}
.van-step--horizontal:last-child {
  position: absolute;
  right: 0;
  width: auto;
}
.van-step--horizontal:last-child .van-step__title {
  text-align: right;
  transform: none;
}
.van-step--horizontal:last-child .van-step__circle-container {
  right: 0;
  padding: 0 0 0 16px;
  transform: translate3d(0, 50%, 0);
}
.van-step--horizontal .van-step__circle-container {
  position: absolute;
  bottom: 12px;
  z-index: 1;
  transform: translate3d(-50%, 50%, 0);
  background-color: #fff;
  background-color: var(--white, #fff);
  padding: 0 16px;
  padding: 0 var(--padding-xs, 16px);
}
.van-step--horizontal .van-step__title {
  display: inline-block;
  transform: translate3d(-50%, 0, 0);
  font-size: 24px;
  font-size: var(--step-horizontal-title-font-size, 24px);
}
.van-step--horizontal .van-step__line {
  position: absolute;
  right: 0;
  bottom: 12px;
  left: 0;
  height: 2px;
  transform: translate3d(0, 50%, 0);
  background-color: #ebedf0;
  background-color: var(--step-line-color, #ebedf0);
}
.van-step--horizontal.van-step--process {
  color: #323233;
  color: var(--step-process-text-color, #323233);
}
.van-step--horizontal.van-step--process .van-step__icon {
  display: block;
  line-height: 1;
  font-size: 24px;
  font-size: var(--step-icon-size, 24px);
}
.van-step--vertical {
  padding: 20px 20px 20px 0;
  line-height: 36px;
}
.van-step--vertical::after {
  border-bottom-width: 2px;
}
.van-step--vertical:last-child::after {
  border-bottom-width: none;
}
.van-step--vertical:first-child::before {
  position: absolute;
  top: 0;
  left: -30px;
  z-index: 1;
  width: 2px;
  height: 40px;
  content: '';
  background-color: #fff;
  background-color: var(--white, #fff);
}
.van-step--vertical .van-step__icon,
.van-step--vertical .van-step__circle,
.van-step--vertical .van-step__line {
  position: absolute;
  top: 38px;
  left: -28px;
  z-index: 2;
  transform: translate3d(-50%, -50%, 0);
}
.van-step--vertical .van-step__icon {
  line-height: 1;
  font-size: 24px;
  font-size: var(--step-icon-size, 24px);
}
.van-step--vertical .van-step__line {
  z-index: 1;
  width: 2px;
  height: 100%;
  transform: translate3d(-50%, 0, 0);
  background-color: #ebedf0;
  background-color: var(--step-line-color, #ebedf0);
}
